# OpenAI API key for embeddings and generation
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: HuggingFace API key
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Embedding model choice (openai, huggingface)
EMBEDDING_MODEL=openai

# LLM choice (openai, huggingface)
LLM_PROVIDER=openai

# Vector database choice (chroma, faiss)
VECTOR_DB=chroma

# Chunk size for text splitting
CHUNK_SIZE=1000
CHUNK_OVERLAP=200